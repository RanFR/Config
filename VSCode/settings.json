{
  /* C/C++ */
  "C_Cpp.clang_format_style": "Google",

  /* CMake */
  "cmake.ignoreCMakeListsMissing": true,

  /* Editor */
  "editor.acceptSuggestionOnEnter": "off", // Only accept suggestion by <tab>
  "editor.fontLigatures": true, // ligature
  "editor.fontFamily": "Maple Mono NF CN",
  "editor.fontSize": 16,
  "editor.guides.bracketPairs": "active", // Display bracket pairs
  "editor.suggest.insertMode": "replace", // Replace text when accepting suggestion
  // Wrodwrap
  "editor.wordWrap": "bounded",
  "editor.wordWrapColumn": 120, // 120 characters

  /* Explorer */
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,

  /* Files */
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.associations": {
    "*.launch": "xml" // Set ros launch file type as xml
  },

  /* Formatter */
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode", // Default formatter for all files
  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-containers"
  },
  "[latex]": {
    "editor.defaultFormatter": "James-Yu.latex-workshop"
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },

  /* Git */
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "never",

  /* Github Copilot */
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.chat.commitMessageGeneration.instructions": [
    { "text": "Analyze staged code changes only. " },
    { "text": "Use imperative mood (e.g., fix, add, update)" },
    { "text": "Follow Conventional Commits: type: summary" },
    { "text": "No punctuation at the end of subject" },
    { "text": "Include body if explanation is helpful" },
    { "text": "Skip body if change is trivial" },
    { "text": "List breaking changes explicitly if any" },
    { "text": "Use English only" }
  ],
  "github.copilot.chat.agent.thinkingTool": true,

  /* Integrated terminal */
  "terminal.integrated.fontFamily": "Maple Mono NF CN",
  "terminal.integrated.fontSize": 16,

  /* Jupyter */
  "jupyter.askForKernelRestart": false,

  /* Latex */
  "latex-workshop.latex.outDir": "build",
  "latex-workshop.latex.tools": [
    {
      "name": "xelatex",
      "command": "xelatex",
      "args": [
        "-synctex=1",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-shell-escape",
        "-output-directory=%OUTDIR%",
        "%DOCFILE%"
      ],
      "env": {}
    },
    {
      "name": "biber",
      "command": "biber",
      "args": [
        "--input-directory=%OUTDIR%",
        "--output-directory=%OUTDIR%",
        "%DOCFILE%"
      ],
      "env": {}
    }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "xelatex",
      "tools": ["xelatex", "xelatex"]
    },
    {
      "name": "xelatex+biber",
      "tools": ["xelatex", "biber", "xelatex", "xelatex"]
    }
  ],
  "latex-workshop.latex.autoBuild.run": "never",
  "latex-workshop.latex.autoClean.run": "onFailed",
  "latex-workshop.latex.recipe.default": "lastUsed",
  "latex-workshop.formatting.latex": "latexindent",
  "latex-workshop.view.pdf.internal.synctex.keybinding": "double-click",

  /* Markdown */
  "markdown.preview.fontFamily": "Noto Sans SC",
  "markdown.preview.fontSize": 16,

  /* Python */
  "python.analysis.autoImportCompletions": true,
  "python.analysis.typeCheckingMode": "standard",

  /* Remote */
  "remote.autoForwardPortsSource": "hybrid",
  "remote.SSH.remotePlatform": {
    "Nuc3": "linux",
    "YuGrp": "linux",
    "ThinkStation": "linux",
    "Server": "linux"
  },

  /* Search settings */
  "search.exclude": {
    // Clangd cache
    "**/.cache": true,
    // Git
    "**/.git": true,
    // IDEs
    "**/.vscode": true,
    "**/.idea": true,
    // Ros build folder
    "**/build": true,
    "**/devel": true,
    "**/logs": true,
    // Python
    "**/__pycache__": true
  },

  /* Workbench */
  "workbench.colorTheme": "Default Dark Modern", // Color theme
  "workbench.iconTheme": "vscode-icons", // Icon theme
  // Tree indent
  "workbench.tree.renderIndentGuides": "onHover",
  "workbench.tree.indent": 16
}
